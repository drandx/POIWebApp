{% extends 'POIWebAppBundle:Administrator:dashboard.html.twig' %}
{% set menu_selected = 'one' %}
{% block content %}
<h2 class="sub-header">Puntos de interés</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Descripción</th>
            <th>Dirección</th>
            <th>Es Activo</th>
            <th>Fecha Creación</th>
            <th>Ultima Actualización</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('poi_point_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.latitude }}</td>
            <td>{{ entity.longitude }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.address }}</td>
            <td>{{ entity.isactivated }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('poi_point_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('poi_point_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
</div>
<ul>
    <li>
        <a href="{{ path('poi_point_new') }}">
            Crear Punto de Interés
        </a>
    </li>
</ul>
    {% endblock %}
