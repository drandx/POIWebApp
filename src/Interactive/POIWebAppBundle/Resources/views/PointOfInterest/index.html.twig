{% extends 'POIWebAppBundle:Administrator:dashboard.html.twig' %}
{% set menu_selected = 'one' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/poiwebapp/css/jobs.css') }}" type="text/css" media="all" />
{% endblock %}
{% block content %}
<h2 class="sub-header">Puntos de interés</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Cudad</th>
            <th>Dirección</th>
            <th>Es Activo</th>
            <th>Fecha Creación</th>
            <th>Ultima Actualización</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('poi_point_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.geocity }}</td>
            <td>{{ entity.address }}</td>
            <td>{{ entity.isactivated }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('poi_point_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
       {% if last_page > 1 %}
        <div class="pagination">
            <a href="{{ path('poi_point', { 'page': 1 }) }}">
                <img src="{{ asset('bundles/poiwebapp/images/first.png') }}" alt="First page" title="First page" />
            </a>
 
            <a href="{{ path('poi_point', { 'page': previous_page }) }}">
                <img src="{{ asset('bundles/poiwebapp/images/previous.png') }}" alt="Previous page" title="Previous page" />
            </a>
 
            {% for page in 1..last_page %}
                {% if page == current_page %}
                    {{ page }}
                {% else %}
                    <a href="{{ path('poi_point', { 'page': page }) }}">{{ page }}</a>
                {% endif %}
            {% endfor %}
 
            <a href="{{ path('poi_point', { 'page': next_page }) }}">
                <img src="{{ asset('bundles/poiwebapp/images/next.png') }}" alt="Next page" title="Next page" />
            </a>
 
            <a href="{{ path('poi_point', { 'page': last_page }) }}">
                <img src="{{ asset('bundles/poiwebapp/images/last.png') }}" alt="Last page" title="Last page" />
            </a>
        </div>
    {% endif %}
 
    <div class="pagination_desc">
        <strong>{{ total_jobs }}</strong> Puntos de interés
        {% if last_page > 1 %}
            - page <strong>{{ current_page }}/{{ last_page }}</strong>
        {% endif %}
    </div>

</div>
<ul>
    <li>
        <a href="{{ path('poi_point_new') }}">
            Crear Punto de Interés
        </a>
    </li>
</ul>
    {% endblock %}
