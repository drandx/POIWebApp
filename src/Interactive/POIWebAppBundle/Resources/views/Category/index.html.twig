{% extends 'POIWebAppBundle:Administrator:dashboard.html.twig' %}
{% set menu_selected = 'two' %}
{% block content %}
<h2 class="sub-header">Categorías</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><a href="#">Nombre</th>
                <th><a href="#">Descripción</th>
                <th><a href="#">Slug</th>
                <th><a href="#">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.slug }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('poi_categroy_edit', { 'id': entity.id }) }}">editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<ul>
    <li>
        <a href="{{ path('poi_categroy_new') }}">
            Crear Categoría
        </a>
    </li>
</ul>
    {% endblock %}
