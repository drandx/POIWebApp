{% extends 'POIWebAppBundle:Administrator:dashboard.html.twig' %}
{% set menu_selected = 'two' %}
{% block content %}
<h2 class="sub-header">Categorías</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Slug</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('poi_categroy_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.slug }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('poi_categroy_show', { 'id': entity.id }) }}">mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('poi_categroy_edit', { 'id': entity.id }) }}">editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<ul>
    <li>
        <a href="{{ path('poi_categroy_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
    {% endblock %}
